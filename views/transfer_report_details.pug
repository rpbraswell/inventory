extends layout

block content

  .report-heading
     span Transfer Details Report: 
     form(class="form-horizontal" action="/transfer/report/details", method="get") 
           label(for="interval") Last 
           input#interval( style='max-width: 50px;' value=days name="interval" type="number") 
           label Days
           label(for="sort") Sort By: 
           select#sort(name="sort") 
               option(value="name", selected=sortField == "name") Name 
               option(value="transferredAt", selected=sortField == "transferredAt") Transferred At
           input(id="refresh" type="submit" value="Refresh")
     div(class="vertical-bar")
     button(onclick="window.location.href='/transfer/report?interval=30'") Transfer Summary

  div
      table
         thead
             tr
                th Name
                th Class 
                th Type
                th Transferred
                th To
                th Transferred At
         tbody 
            each row in rows
              tr
                td #{row.Name}
                td #{row.Class}
                td #{row.Type}
                td #{row.Transferred}
                td #{row.To}
                td #{row["Transferred At"]}
 
