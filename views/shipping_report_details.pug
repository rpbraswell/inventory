extends layout

block content

  .report-heading
     span Shipping Details Report: 
     form(class="form-horizontal" action="/reports/shippingDetails", method="get") 
           label(for="interval") Last 
           input#interval( style='max-width: 50px;' value=days name="interval" type="number") 
           label Days
           label(for="sort") Sort By: 
           select#sort(name="sort") 
               option(value="name", selected=sortField == "name") Name 
               option(value="shippedAt", selected=sortField == "shippedAt") Shipped At
           input(class="refresh" type="submit" value="Refresh")
     div(class="vertical-bar")
     button(onclick=`window.location.href='/reports/shipping?interval=${days}'`) Shipping Summary

  div
      table
         thead
             tr
                th Name
                th Class 
                th Type
                th Shipped
                th Shipped At
         tbody 
            each row in rows
              tr
                td #{row.Name}
                td #{row.Class}
                td #{row.Type}
                td #{row.Shipped}
                td #{row["Shipped At"]}
 
