extends layout

block content

   .form-div

      h2= name

      form(action="/categories", method="POST")
         ul.form-style
            li
               label(for="category") Category Name
                  span(class="required") *
               input#category(type="text", name="category", placeholder="required", autofocus)
            li.button-group
               button(type="submit") Submit
               button(type="button" onclick="history.back()") Cancel

